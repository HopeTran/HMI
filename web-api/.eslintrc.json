{
  "root": true,
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "func-style": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": [1, "single", "avoid-escape"],
    "semi": [2, "always"],
    "comma-dangle": ["error", "always-multiline"]
  }
}